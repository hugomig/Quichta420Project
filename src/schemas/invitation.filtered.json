{
    "$schema": "http://json-schema.org/schema",
    "$id": "invitation.filtered.json",
    "type": "object",
    "required": [
        "id",
        "party",
        "user",
        "invitor",
        "accepted",
        "role"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "party": {
            "type": "string"
        },
        "user": {
            "type": "string"
        },
        "invitor": {
            "type": "string"
        },
        "accepted": {
            "type": "boolean"
        },
        "role": {
            "type": "string",
            "enum": ["organizer", "invitor", "participant"]
        }
    }
}