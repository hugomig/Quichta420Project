{
    "$schema": "http://json-schema.org/schema",
    "$id": "invitation.json",
    "type": "object",
    "required": [
        "partyId",
        "username"
    ],
    "properties": {
        "accepted": {
            "type": "boolean"
        },
        "role": {
            "type": "string",
            "enum": ["organizer", "invitor", "participant"]
        },
        "partyId": {
            "type": "string"
        },
        "username": {
            "type": "string"
        }
    }
}