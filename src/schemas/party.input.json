{
    "$schema": "http://json-schema.org/schema",
    "$id": "party.input.json",
    "type": "object",
    "required": [
        "name",
        "location",
        "date",
        "description"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date-time"
        },
        "description": {
            "type": "string"
        },
        "minimumAge": {
            "type": "number"
        },
        "maximumAge": {
            "type": "number"
        }
    }
}